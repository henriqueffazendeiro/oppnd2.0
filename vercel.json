{
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@20.x"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://mail.google.com" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}